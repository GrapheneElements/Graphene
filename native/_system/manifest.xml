			<handler>GetDoc</handler>
			<handlerFile>actions/GetDoc.php</handlerFile>
			<doc>doc/GetDoc.xml</doc>
		</action>
		<action>
			<name>GET_LOG</name>
			<query>log/:page</query>
			<requestMethod>GET</requestMethod>
			<handler>GetLog</handler>
			<handlerFile>actions/GetLog.php</handlerFile>
			<doc>doc/GetLog.xml</doc>
		</action>
		<action>
			<name>WRITE_LOG</name>
			<query>log</query>
			<requestMethod>POST</requestMethod>
			<handler>WriteLog</handler>
			<handlerFile>actions/WriteLog.php</handlerFile>
			<doc>doc/WriteLog.xml</doc>
		</action>
	</actions>
</module>