	<beansPath>beans</beansPath>

	<actions>
		<!-- Stato applicazione -->
		<action>
			<name>BENCHMARK_BEANS_AND_CRUD</name>
			<query>benchmark</query>
			<requestMethod>GET</requestMethod>
			<handler>Benchmark</handler>
			<handlerFile>actions/Benchmark.php</handlerFile>
			<doc>doc/Benchmark.xml</doc>
		</action>
		<!-- Stato applicazione -->
		<action>
			<name>GET_STATUS</name>
			<query>status</query>
			<requestMethod>GET</requestMethod>
			<handler>GetStatus</handler>
			<handlerFile>actions/GetStatus.php</handlerFile>
			<doc>doc/GetStatus.xml</doc>
		</action>
		<!-- Elenco dei moduli installati e relative versioni-->
		<action>
			<name>GET_MODULES</name>
			<query>modules</query>
			<requestMethod>GET</requestMethod>
			<handler>GetModules</handler>
			<handlerFile>actions/GetModules.php</handlerFile>
			<doc>doc/GetModules.xml</doc>
		</action>
		<!-- Elenco dei moduli installati e relative versioni-->
		<action>
			<name>GET_DOC</name>
			<query>doc/:action</query>
