<?xml version="1.0" encoding="UTF-8"?>
<module v="0.0.0.1">
	<info>
		<version>0.0.0.1</version>
		<name>system.graphene.authentication</name>
		<authorName>Marco Magnetti</authorName>
		<authorEmail>marcomagnetti@gmail.com</authorEmail>
		<support>www.tests.it</support>
	</info>
	<namespace>auth</namespace>
	<domain>auth</domain>
	<doc>doc/doc.xml</doc>
	<beansPath>beans</beansPath>
	<actions>
		<action>
			<name>LOGIN</name>
			<query>login</query>
			<requestMethod>POST</requestMethod>
			<handler>Login</handler>
			<handlerFile>actions/Login.php</handlerFile>
		</action>
		<action>
			<name>VALIDATE</name>
			<query>validate/:at</query>
			<requestMethod>GET</requestMethod>
			<handler>Validate</handler>
			<handlerFile>actions/Validate.php</handlerFile>
			<doc>doc/validate.xml</doc>
		</action>
		<action>
			<name>LOGOUT</name>
			<query>logout/:at</query>
			<requestMethod>GET</requestMethod>
			<handler>Logout</handler>
			<handlerFile>actions/Logout.php</handlerFile>
		</action>
	</actions>
</module>