<?xml version="1.0" encoding="UTF-8"?>
<module v="0.0.1.0">
		<info
			version		= "0.0.0.1"
			name		= "com.graphene.system"
			namespace	= "system"
			author		= "Marco Magnetti [marcomagnetti@gmail.com]"
			support		= "{{host.addr}}/doc/system"
			beans-path	= "beans"
		/>
		
		<handle event="install" handler="Install@handlers/install.php"   				 />
		<handle event="remove"  handler="Install@handlers/remove.php"    				 />
		<handle event="backup"  handler="Install@handlers/uninstall.php" overload="true" />

		<action method="get" query="status"  name="STATUS"  handler="GetStatus@actions/GetStatus.STATUS.php" />	
		<action method="get" query="modules" name="MODULES" handler="GetModules@actions/GetModules.MODULES.php" />		
			
</module>