		<name>system.graphene.grTests</name>
		<authorName>Marco Magnetti</authorName>
		<authorEmail>marcomagnetti@gmail.com</authorEmail>
		<support>www.tests.it</support>
	</info>
	<doc>doc/doc.xml</doc>
	<namespace>grTests</namespace>
	<domain>_tests</domain>
	<beansPath>beans</beansPath>

	<actions>
		<!-- Testing bean -->
		<action>
			<name>BEANS_CREATE</name>
			<query>beans</query>
			<requestMethod>POST</requestMethod>
			<handler>Create</handler>
			<handlerFile>actions/TestBeans.php</handlerFile>
		</action>
		<action>
			<name>BEANS_READ</name>
			<query>beans</query>
			<requestMethod>GET</requestMethod>
			<handler>Read</handler>
			<handlerFile>actions/TestBeans.php</handlerFile>
		</action>
		<action>
			<name>BEANS_UPDATE</name>
			<query>beans</query>
			<requestMethod>PUT</requestMethod>
			<handler>Update</handler>
			<handlerFile>actions/TestBeans.php</handlerFile>
		</action>
		<action>
			<name>BEANS_DELETE</name>
			<query>beans</query>
			<requestMethod>DELETE</requestMethod>
			<handler>Delete</handler>
			<handlerFile>actions/TestBeans.php</handlerFile>
		</action>
	</actions>
